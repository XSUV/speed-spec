{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "rive/globals"
    ],
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".rive",
    "build",
    "coverage",
    "dist",
    "node_modules"
  ]
}
